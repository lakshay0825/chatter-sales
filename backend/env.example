# Database
# Note: If you get authentication plugin errors, add &authPlugins=mysql_native_password to the URL
# Or change your MySQL user to use mysql_native_password authentication
DATABASE_URL="mysql://user:password@localhost:3306/chatter_sales?schema=public"

# Server
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (for invitations)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@creatoradvisor.it

# Application
APP_NAME=Chatter Sales Management
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Timezone
DEFAULT_TIMEZONE=Europe/Rome

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=./uploads

